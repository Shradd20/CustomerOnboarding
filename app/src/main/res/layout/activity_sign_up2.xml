<!--        app:layout_constraintStart_toStartOf="@+id/inputGenderR"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/inputGenderR" />-->

            <EditText
                android:id="@+id/inputAdhar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_bg"

                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Aadhar No."
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/inputDOB"
                app:layout_constraintStart_toStartOf="@+id/inputDOB"
                app:layout_constraintTop_toBottomOf="@+id/inputDOB" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputAdhar" />

    <TextView
        android:id="@+id/alreadyhaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Already Register? Go to Login"
        app:layout_constraintEnd_toEndOf="@+id/inputCpassword"
        app:layout_constraintStart_toStartOf="@+id/inputCpassword"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>